{
    "ServiceSpec": {
        "Name": "citytiler",
        "TaskTemplate": {
            "ContainerSpec": {
                "Image": "docker.cmclinnovations.com/vcity/py3dtilers:latest",
                "Command": [
                    "tail",
                    "-f",
                    "/dev/null"
                ],
                "Configs": [
                    {
                        "ConfigName": "postgis"
                    }
                ],
                "Secrets": [
                    {
                        "SecretName": "postgis_password"
                    }
                ],
                "Mounts": [
                    {
                        "Type": "volume",
                        "Source": "3dtiles",
                        "Target": "/3dtiles",
                        "ReadOnly": false
                    }
                ]
            }
        }
    }
}