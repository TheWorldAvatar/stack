{
    "type": "visualisation",
    "ServiceSpec": {
        "Name": "visualisation",
        "TaskTemplate": {
            "ContainerSpec": {
                "Image": "ghcr.io/cambridge-cares/twa-vf:latest",
                "Mounts": [
                    {
                        "Type": "volume",
                        "Source": "vis-files",
                        "Target": "/twa/public"
                    }
                ],
                "Env": [
                    "BASE_PATH=/visualisation/"
                  ],
                "Secrets": [
                    {
                        "SecretName": "mapbox_username",
                        "File": {
                            "Name": "/var/www/html/mapbox_username"
                        }
                    },
                    {
                        "SecretName": "mapbox_api_key",
                        "File": {
                            "Name": "/var/www/html/mapbox_api_key"
                        }
                    }
                ]
            }
        }
    },
    "endpoints": {
        "ui": {
            "url": "http://localhost:3000",
            "externalPath": "/visualisation/"
        }
    }
}