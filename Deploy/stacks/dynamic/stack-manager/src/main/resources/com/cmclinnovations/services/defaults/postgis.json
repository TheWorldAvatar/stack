{
    "name": "postgis",
    "type": "postgres",
    "image": "postgis/postgis:14-3.1-alpine",
    "environment": {
        "POSTGRES_HOST_AUTH_METHOD": "scram-sha-256",
        "POSTGRES_INITDB_ARGS": "--auth-host=scram-sha-256"
    },
    "username": "postgres",
    "passwordFile": "/run/secrets/postgis_password",
    "HostConfig": {
        "Binds": [
            "/run/secrets/postgis_password:/run/secrets/postgis_password:ro"
        ],
        "Mounts": [
            {
                "Type": "volume",
                "Source": "postgis_data",
                "Target": "/var/lib/postgresql/data"
            },
            {
                "Type": "volume",
                "Source": "geotifs",
                "Target": "/geotifs"
            }
        ]
    }
}