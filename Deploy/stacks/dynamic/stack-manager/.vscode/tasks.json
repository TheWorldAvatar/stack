{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "compose-build",
            "command": "bash",
            "args": [
                "-c",
                "./stack.sh build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "compose-deploy-internal",
            "command": "./stack.sh",
            "args": [
                "start",
                "${input:stackName}",
                "${input:external.port}",
                "--debug-port",
                "${config:debug.port}"
            ],
                "options": {
                    "shell": {
                    "executable": "bash"
                }
            }
        },
        {
            "type": "shell",
            "label": "compose-deploy",
            "command": "sleep 1",
            "dependsOn": [
                "compose-deploy-internal"
            ],
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell"
                    }
                }
            }
        },
        {
            "type": "shell",
            "label": "compose-build-deploy",
            "dependsOn": [
                "compose-build",
                "compose-deploy"
            ],
            "dependsOrder": "sequence"
        }
    ],
    "inputs": [
        {
            "id": "stackName",
            "type": "promptString",
            "description": "Name your stack.",
            "default": "TEST-STACK"
        },
        {
            "id": "external.port",
            "type": "command",
            // always require selection
            "command": "shellCommand.execute",
            "args": {
                "command": "bash ./stack.sh ports 5 3838 4000"
            }
        }
    ]
}